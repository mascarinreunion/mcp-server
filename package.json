{
	"name": "@mascarin/mcp",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "pnpm --parallel run dev",
		"dev:server": "pnpm --filter @mascarin/mcp-server run dev",
		"dev:ui": "pnpm --filter @mascarin/mcp-ui run dev",
		"build": "pnpm --filter @mascarin/mcp-server run build && pnpm --filter @mascarin/mcp-ui run build",
		"start": "pnpm --filter @mascarin/mcp-server run start",
		"inspect": "pnpm --filter @mascarin/mcp-server run inspect"
	},
	"devDependencies": {
		"typescript": "^5.9.3"
	}
}